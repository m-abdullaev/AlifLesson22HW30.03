@model AlifLesson22HW30._03.Models.Category

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Category</h2>
<br />
<h4>Are you sure want to delete category?</h4>
<br />
<div>
    <a asp-action="Index">
        <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
        </svg>
    </a>
</div>
<div class="row">
    <div class="col-md-7">
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                Category Name
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
    <div class="col-md-5">
        <img style="width:400px" src="https://www.flaticon.com/svg/vstatic/svg/4388/4388976.svg?token=exp=1617271953~hmac=6af4fd172ddd4b4244850ebdf9231e42" alt="Alternate Text" />
    </div>
</div>